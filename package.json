{
	"name": "bun-playground",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bun --hot dev.ts",
		"dev:vanilla": "bun src/index.html --console",
		"dev:react": "bun src/react/index.html --console",
		"build": "rm -rf dist && NODE_ENV=production bun run build.ts",
		"build:dev": "rm -rf dist && NODE_ENV=development bun run build.ts",
		"serve": "bun dist/index.html",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"format": "bunx prettier --write .",
		"lint:style": "bunx stylelint \"**/*.{css,scss}\" --fix",
		"lint:html": "bunx markuplint \"**/*.{html}\" --fix",
		"lint": "bun run lint:style && bun run lint:html",
		"check": "bunx @biomejs/biome check .",
		"generate-sitemap": "bun run generate-sitemap.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/bun": "latest",
		"@types/node": "^25.0.3",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"bun-plugin-tailwind": "0.1.2",
		"fast-glob": "^3.3.3",
		"happy-dom": "^20.0.11",
		"markuplint": "^4.14.0",
		"prettier": "^3.7.4",
		"stylelint": "^16.26.1",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-config-standard": "39.0.1"
	},
	"peerDependencies": {
		"typescript": "^5.8.2"
	},
	"dependencies": {
		"@types/jquery": "^3.5.32",
		"jquery": "^4.0.0",
		"@radix-ui/react-checkbox": "^1.3.3",
		"@radix-ui/react-slot": "^1.2.4",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "0.562.0",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.18"
	}
}
